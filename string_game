<body>
    <div class="container">
        <h1>ðŸŽ² Combination Generator</h1>
        <p class="subtitle">Generate all possible combinations of your string!</p>

        <div class="input-group">
            <input type="text" id="inputString" maxlength="5" placeholder="Enter up to 5 characters">
            <button onclick="generateCombinations()">Generate</button>
        </div>

        <div id="error" class="error hidden"></div>
        <div id="info" class="info hidden"></div>
        <div id="results" class="results hidden"></div>
    </div>

    <script>
        function generateCombinations() {
            const input = document.getElementById('inputString').value;
            const errorEl = document.getElementById('error');
            const infoEl = document.getElementById('info');
            const resultsEl = document.getElementById('results');

            errorEl.classList.add('hidden');
            infoEl.classList.add('hidden');
            resultsEl.classList.add('hidden');

            if (!input) {
                errorEl.textContent = 'Please enter a string!';
                errorEl.classList.remove('hidden');
                return;
            }

            if (input.length > 5) {
                errorEl.textContent = 'String must be 5 characters or less!';
                errorEl.classList.remove('hidden');
                return;
            }

            const combinations = getAllCombinations(input);
            
            infoEl.innerHTML = `Found <strong>${combinations.length}</strong> unique combinations!`;
            infoEl.classList.remove('hidden');

            resultsEl.innerHTML = combinations.map(combo => 
                `<span class="combo">${combo || '(empty)'}</span>`
            ).join('');
            resultsEl.classList.remove('hidden');
        }

        function getAllCombinations(str) {
            const results = new Set();
            
            function permute(arr, current = []) {
                if (current.length > 0) {
                    results.add(current.join(''));
                }
                
                for (let i = 0; i < arr.length; i++) {
                    const remaining = arr.slice(0, i).concat(arr.slice(i + 1));
                    permute(remaining, current.concat(arr[i]));
                }
            }

            permute(str.split(''));
            
            return Array.from(results).sort((a, b) => {
                if (a.length !== b.length) return a.length - b.length;
                return a.localeCompare(b);
            });
        }

        document.getElementById('inputString').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateCombinations();
            }
        });
    </script>
</body>
